<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Info.UserInfoActivity">

    <ScrollView
        android:id="@+id/scrollView_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/ID_Picture"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="41dp"
                app:srcCompat="@drawable/profile_icon" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="50dp"
                android:text="성명 :" />

            <TextView
                android:id="@+id/Name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="50dp"
                android:text=""
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="80dp"
                android:text="학번 :" />

            <TextView
                android:id="@+id/StudentID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="80dp"
                android:text="" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="110dp"
                android:text="학과 :" />

            <TextView
                android:id="@+id/Major"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="110dp"
                android:text="" />



            <RelativeLayout
                android:layout_width="390dp"
                android:layout_height="90dp"
                android:layout_marginTop="150dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/back_tols"
                android:id="@+id/asd">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="취득학점 :" />

                <TextView
                    android:id="@+id/Earned_Credits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="20dp"
                    android:text="105" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="150dp"
                    android:layout_marginTop="20dp"
                    android:text="잔여학점 :" />

                <TextView
                    android:id="@+id/Remaining_Credits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="210dp"
                    android:layout_marginTop="20dp"
                    android:text="25" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="50dp"
                    android:text="전공학점 :" />

                <TextView
                    android:id="@+id/major_Credits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="50dp"
                    android:text="58" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="150dp"
                    android:layout_marginTop="50dp"
                    android:text="교양학점 :" />

                <TextView
                    android:id="@+id/Liberal_Arts_Credits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="210dp"
                    android:layout_marginTop="50dp"
                    android:text="45" />


                <Button
                    android:id="@+id/diagnosis"
                    android:layout_width="124dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="290dp"
                    android:layout_marginTop="0dp"
                    android:background="#00ff0000"
                    android:fontFamily="@font/him"
                    android:text="진단"
                    android:textSize="20dp" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/row1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/asd"
                android:layout_marginTop="0dp"
                android:orientation="horizontal"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/clothingCard"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="8dp">

                    <RelativeLayout
                        android:id="@+id/personal_button"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:background="@drawable/back_personal">

                        <TextView
                            android:id="@+id/clothingName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="자기소개서"
                            android:textColor="@color/grey_800"
                            android:layout_marginTop="5dp"
                            android:textSize="20sp"
                            android:fontFamily="@font/him"/>

                        <ImageView
                            android:id="@+id/clothingImage"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="50dp"
                            android:background="@drawable/icon_personal_2" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="8dp">

                    <RelativeLayout
                        android:id="@+id/spec_button"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:background="@drawable/back_spec">

                        <TextView
                            android:id="@+id/elecName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="스펙 작성"
                            android:textColor="@color/grey_800"
                            android:fontFamily="@font/him"
                            android:layout_marginTop="5dp"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/elecImage"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerHorizontal="true"

                            android:layout_marginTop="50dp"
                            android:background="@drawable/icon_spec_2" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/row2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/row1"
                android:layout_marginTop="0dp"
                android:orientation="horizontal"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/row1">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="8dp">

                    <RelativeLayout
                        android:id="@+id/resume_button"
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:background="@drawable/back_resume">

                        <TextView
                            android:id="@+id/homeName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="이력서 제작"
                            android:textColor="@color/grey_800"
                            android:fontFamily="@font/him"
                            android:layout_marginTop="5dp"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/homeImage"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="50dp"
                            android:background="@drawable/icon_resume_2" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="40dp"
                    app:cardElevation="8dp">

                    <RelativeLayout
                        android:id="@+id/employment_button"
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        android:background="@drawable/back_job">

                        <TextView
                            android:id="@+id/beautyName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="채용정보"
                            android:textColor="@color/grey_800"
                            android:fontFamily="@font/him"
                            android:layout_marginTop="5dp"
                            android:textSize="20sp" />

                        <ImageView
                            android:id="@+id/beautyImage"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="50dp"
                            android:background="@drawable/icon_job_2" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>



        </RelativeLayout>

    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigationview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:itemBackground="@color/white"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/bottom_menu"
            app:itemTextColor="@color/grey_700" />

    </LinearLayout>
</RelativeLayout>