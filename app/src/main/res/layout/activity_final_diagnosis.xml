<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Info.SubActivity.FinalDiagnosisActivity">

    <TextView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="30dp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:text="최종 진단!!" />

    <TextView
        android:id="@+id/resultTitleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:padding="20dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="아직 졸업은 아니시군요?"
        android:fontFamily="@font/him"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/resultView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:padding="20dp"
        android:textSize="22dp"
        android:text="졸업 진단 결과"
        android:fontFamily="@font/him"/>

    <Button
        android:id="@+id/homeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="홈 화면"
        android:textSize="16sp"
        android:fontFamily="@font/him"/>

    <Button
        android:id="@+id/curriculumButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="학과 커리큘럼 확인하기"
        android:textSize="16sp"
        android:fontFamily="@font/him"/>

</LinearLayout>