<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- When the EditText is in focus -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Background color -->
            <corners android:radius="8dp"/> <!-- Rounded corners -->
            <stroke android:width="2dp" android:color="#FF9800"/> <!-- Border color when focused -->
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Background color -->
            <corners android:radius="8dp"/> <!-- Rounded corners -->
            <stroke android:width="1dp" android:color="#D3D3D3"/> <!-- Border color by default -->
        </shape>
    </item>
</selector>
